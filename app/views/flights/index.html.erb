<%= form_with url: root_path, method: :get do |form| %>
    <%= form.select(:departure_airport, options_for_select(@all_airports))%>
    <%= form.select(:arrival_airport, options_for_select(@all_airports))%>
    <%= form.select( :num_of_passengers, options_for_select([[1, 1], [2, 2], [3, 3], [4, 4]]))%>
    <%= form.select(:start_time, options_from_collection_for_select(@all_dates, :start_time_seconds, :start_time_formatted)) %>
    <%= form.submit %>
<% end %>

<% if @found_flights && !@found_flights.empty? %>
    <%= form_with url: new_booking_path, method: :get do |form| %>
        <%= form.hidden_field :num_of_passengers, value: @num_of_passengers %>
        <%= form.collection_radio_buttons :flight_id, @found_flights, :id, :start_time_with_hours_formatted %>
        <%= form.submit %> 
    <% end %>
<% end %>